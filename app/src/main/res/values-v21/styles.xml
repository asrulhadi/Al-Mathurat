<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_10</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_toolbar</item>
        <item name="colorPrimaryDark">@color/color_10</item>
    </style>


    <style name="AppParentScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/color_11</item>
        <item name="android:windowAnimationStyle">@style/Animation.ActivityH</item>
    </style>

    <style name="Animation.ActivityH" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_in</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_toolbar</item>
        <item name="colorPrimaryDark">@color/gray_toolbar</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/gray_toolbar</item>
    </style>

    <style name="AppThemeDarkStatusbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_toolbar</item>
        <item name="colorPrimaryDark">@color/gray_toolbar</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabTextSmall" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_small_plus</item>
    </style>

    <style name="CustomTabTextMedium" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="CustomTabTextMediumPlus" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_medium_plus</item>
    </style>

    <style name="CustomTabTextLarge" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="font">GE_MEDIUM</item>
    </style>

    <style name="StatsText">
        <item name="android:textSize">@dimen/font_small_plus</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin2</item>
        <item name="android:paddingRight">@dimen/margin2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="font">GE_MEDIUM</item>
    </style>


    <style name="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small_plus</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="font">GE_MEDIUM</item>
    </style>

    <style name="Profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_small_plus</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin4</item>
        <item name="font">GE_MEDIUM</item>
    </style>

    <style name="StadiumText" parent="DefaultText">
        <item name="android:textSize">@dimen/font_small_plus</item>
    </style>


    <style name="LoadingDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="LoadingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>


    <style name="Bubble">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <!--<item name="android:background">@drawable/rounded_orange</item>-->
        <item name="android:paddingBottom">@dimen/margin4</item>
        <item name="android:paddingLeft">@dimen/margin8</item>
        <item name="android:paddingRight">@dimen/margin8</item>
        <item name="android:paddingTop">@dimen/margin4</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_small_plus</item>
        <item name="android:visibility">gone</item>
        <item name="font">GE_MEDIUM</item>
    </style>


    <style name="SwipeLayout">
        <item name="android:paddingBottom">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>


</resources>
