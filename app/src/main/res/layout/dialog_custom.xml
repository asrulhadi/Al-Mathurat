<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.apprikot.mathurat.view.custom.CustomTextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_color"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin12"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_medium"
        />

    <com.apprikot.mathurat.view.custom.CustomTextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin20"
        android:paddingLeft="@dimen/margin8"
        android:paddingRight="@dimen/margin8"
        android:paddingTop="@dimen/margin20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.apprikot.mathurat.view.custom.CustomTextView
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/txt_color"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium"
            />

        <View
            android:id="@+id/view_separator"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_list_divider" />

        <com.apprikot.mathurat.view.custom.CustomTextView
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/txt_color"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium"
            />
    </LinearLayout>
</LinearLayout>