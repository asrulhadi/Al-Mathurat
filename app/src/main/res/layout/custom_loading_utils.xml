<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.apprikot.mathurat.view.custom.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/radius_loading"
        android:layout_height="@dimen/radius_loading"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_logo_small"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            />
        <!--android:src="@drawable/ic_qanati_logo" -->

        <com.apprikot.mathurat.view.custom.CustomTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin16"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small_plus"
            />
        <!--android:text="@string/msg.data_not_available"-->

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin40"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin10"
            android:adjustViewBounds="true"
            android:visibility="gone" />
        <!--android:src="@drawable/ic_qanati_logo"-->
    </LinearLayout>
</RelativeLayout>