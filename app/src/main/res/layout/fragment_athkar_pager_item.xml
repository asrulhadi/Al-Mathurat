<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/value15"
    android:layout_marginRight="@dimen/value15">

    <com.apprikot.mathurat.view.custom.ResponsiveScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/value70"
        android:fillViewport="true"
        android:scrollbars="vertical">


        <com.apprikot.mathurat.view.custom.CustomTextViewContent
            android:id="@+id/thaker_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/value5"
            android:textColor="@color/color_10"
            android:lineSpacingExtra="@dimen/line_spacing"
            android:textSize="@dimen/font_medium_plus" />


    </com.apprikot.mathurat.view.custom.ResponsiveScrollView>


</FrameLayout>