<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ly_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <VideoView
            android:id="@+id/video_view_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bar"
            android:layout_marginLeft="@dimen/value15"
            android:layout_marginRight="@dimen/value15"
            android:layout_marginTop="@dimen/value10"
            android:background="@drawable/shape_one"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_action_bar"
            android:layout_marginLeft="@dimen/value15"
            android:layout_marginRight="@dimen/value15"
            android:layout_marginTop="@dimen/value30"
            android:background="@drawable/shape_four"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/minus"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginLeft="@dimen/value10"
                android:src="@drawable/ic_minus" />

            <com.apprikot.mathurat.view.custom.CustomTextViewContent
                android:id="@+id/example"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/line_size"
                android:textColor="@color/color_10"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/pluse"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/ic_pluse" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_action_bar"
            android:layout_marginLeft="@dimen/value15"
            android:layout_marginRight="@dimen/value15"
            android:layout_marginTop="@dimen/value40"
            android:background="@drawable/shape_four"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/english"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginLeft="@dimen/value10"
                android:src="@drawable/selector_lang_en" />

            <com.apprikot.mathurat.view.custom.CustomTextView
                android:id="@+id/lang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_10"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/arabic"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/selector_lang_ar" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_action_bar"
            android:layout_marginLeft="@dimen/value15"
            android:layout_marginRight="@dimen/value15"
            android:layout_marginTop="@dimen/value40"
            android:background="@drawable/shape_four"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/all_notify_on"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginLeft="@dimen/value10"
                android:src="@drawable/selector_all_notify_on" />

            <com.apprikot.mathurat.view.custom.CustomTextView
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/notify_setting"
                android:textColor="@color/color_10"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <com.apprikot.mathurat.view.custom.CheckableImageView
                android:id="@+id/all_notify_off"
                android:layout_width="@dimen/height_toolbar_icon_large"
                android:layout_height="@dimen/height_toolbar_icon_large"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/selector_all_notify_off" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/value25"
            android:layout_marginTop="@dimen/value25"
            android:layout_marginLeft="@dimen/value15"
            android:layout_marginRight="@dimen/value15"
            android:layout_weight="1"
            android:orientation="horizontal">


            <com.apprikot.mathurat.view.custom.WheelView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.apprikot.mathurat.view.custom.WheelView
                android:id="@+id/mins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.apprikot.mathurat.view.custom.WheelView
                android:id="@+id/ampm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>