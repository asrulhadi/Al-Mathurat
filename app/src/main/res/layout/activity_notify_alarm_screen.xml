<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.apprikot.mathurat.view.custom.CustomTextView
        android:id="@+id/notify_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Notfiy!"
        android:textSize="38dp" />

    <com.apprikot.mathurat.view.custom.CustomTextView
        android:id="@+id/notify_screen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notify_screen_button"
        android:layout_below="@+id/notify_screen_title"
        android:layout_marginTop="28dp"
        android:text="00 : 00"
        android:textSize="52dp" />

    <com.apprikot.mathurat.view.custom.CustomTextView
        android:id="@+id/notify_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notify_screen_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Notify name" />

    <Button
        android:id="@+id/notify_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:text="Dismiss"
        android:textSize="38dp" />

</RelativeLayout>
